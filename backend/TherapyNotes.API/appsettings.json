{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JWT": {
    "Secret": "CHANGE-THIS-IN-PRODUCTION-USE-ENVIRONMENT-VARIABLE",
    "ExpiryHours": "24"
  },
  "MongoDB": {
    "ConnectionString": "MONGODB-CONNECTION-STRING-FROM-ENV",
    "DatabaseName": "therapynotes"
  },
  "Storage": {
    "Endpoint": "STORAGE-ENDPOINT-FROM-ENV",
    "AccessKey": "STORAGE-ACCESS-KEY-FROM-ENV",
    "SecretKey": "STORAGE-SECRET-KEY-FROM-ENV",
    "BucketName": "therapy-notes",
    "Region": "auto"
  },
  "Stripe": {
    "SecretKey": "STRIPE-SECRET-KEY-FROM-ENV",
    "WebhookSecret": "STRIPE-WEBHOOK-SECRET-FROM-ENV",
    "ProfessionalPriceId": "STRIPE-PROFESSIONAL-PRICE-ID",
    "PremiumPriceId": "STRIPE-PREMIUM-PRICE-ID"
  },
  "Resend": {
    "ApiKey": "RESEND-API-KEY-FROM-ENV-OPTIONAL",
    "FromEmail": "TherapyNotes <noreply@therapynotes.app>"
  }
}
